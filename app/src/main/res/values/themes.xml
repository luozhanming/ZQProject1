<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZQProject" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_318EF8</item>
        <item name="colorPrimaryVariant">@color/color_318EF8</item>
        <item name="colorOnPrimary">@color/color_318EF8</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_318EF8</item>
        <item name="colorSecondaryVariant">@color/color_318EF8</item>
        <item name="colorOnSecondary">@color/color_318EF8</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="MyAppTheme" parent="Theme.ZQProject">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
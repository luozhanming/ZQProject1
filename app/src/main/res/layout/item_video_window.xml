<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="button"
            type="cn.com.ava.zqproject.vo.StatefulView&lt;cn.com.ava.zqproject.vo.VideoWindowButton>" />
    </data>


    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="52dp"
        android:layout_marginBottom="20dp"
        android:selected="@{button.selected}"
        android:background="@drawable/bg_button_3">

        <TextView
            android:id="@+id/tv_window_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{button.obj.windowName}"
            android:textColor="@drawable/selector_text_color_4"
            android:textSize="19sp" />

    </FrameLayout>

</layout>